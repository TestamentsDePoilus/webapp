{
  "settings": {
    "analysis": {
      "filter": {
        "french_elision": {
          "type": "elision",
          "articles_case": true,
          "articles": [
            "l",
            "m",
            "t",
            "qu",
            "n",
            "s",
            "j",
            "d",
            "c",
            "jusqu",
            "quoiqu",
            "lorsqu",
            "puisqu"
          ]
        },
        "french_stemmer": {
          "type": "stemmer",
          "language": "light_french"
        },
        "my_ascii_folding": {
          "type": "asciifolding",
          "preserve_original": true
        },
        "my_snow": {
          "type": "snowball",
          "language": "French"
        }
      },
      "analyzer": {
        "french_heavy": {
          "tokenizer": "icu_tokenizer",
          "char_filter": ["html_strip"],
